<UserControl x:Class="IPlayer.Contracts.SettingsFlyLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:con="using:Microsoft.Advertising.WinRT.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="768"
             d:DesignWidth="250"
             mc:Ignorable="d">


    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="Black" />
                <GradientStop Offset="1" Color="#FF835858" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="235*" />
            <RowDefinition Height="280*" />
            <RowDefinition Height="253*" />
        </Grid.RowDefinitions>
        <Image x:Name="Image"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" />





        <ScrollViewer Grid.Row="1" Foreground="Violet">
            <TextBlock x:Name="info"
                       FontSize="20"
                       Foreground="{StaticResource ListBoxItemSelectedForegroundThemeBrush}"
                       TextWrapping="Wrap" />

        </ScrollViewer>

        <Grid Grid.Row="2">
            <con:AdControl Width="250"
                           Height="250"
                           AdUnitId="10151046"
                           ApplicationId="2e1ca766-6bdd-4935-a757-7edf61db7fbf" />
        </Grid>
    </Grid>
</UserControl>

